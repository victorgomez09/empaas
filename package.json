{
	"name": "empaas",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"empaas:setup": "pnpm --filter=empaas run setup",
		"empaas:migrate": "pnpm --filter=empaas run migration:run",
		"empaas:dev": "pnpm --filter=empaas run dev",
		"empaas:dev:turbopack": "pnpm --filter=empaas run dev-turbopack",
		"empaas:build": "pnpm --filter=empaas run build",
		"empaas:start": "pnpm --filter=empaas run start",
		"test": "pnpm --filter=empaas run test",
		"server:script": "pnpm --filter=server run switch:dev",
		"server:dev": "pnpm --filter=server run dev",
		"server:build": "pnpm --filter=server run build",
		"docker:build:canary": "./apps/empaas/docker/build.sh canary",
		"typecheck": "pnpm -r run typecheck",
		"build": "pnpm -r run build",
		"format:lint": "biome check .",
		"check": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
		"format:lint-fix": "biome check . --write"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/node": "^18.19.104",
		"dotenv": "16.4.5",
		"esbuild": "0.20.2",
		"lefthook": "1.8.4",
		"lint-staged": "^15.5.2",
		"tsx": "4.16.2"
	},
	"packageManager": "pnpm@9.12.0",
	"engines": {
		"node": "^20.16.0",
		"pnpm": ">=9.12.0"
	},
	"lint-staged": {
		"*": [
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"resolutions": {
		"@types/react": "18.3.5",
		"@types/react-dom": "18.3.0"
	}
}
